		</a>
	</div>			
   
</section> <!-- end home -->
<section id="services">

	<div class="overlay"></div>
	<div class="gradient-overlay"></div>
	
	<div class="row-main narrow section-intro with-bottom-sep animate-this">
		<div class="col-full">
			
			<h3>Services</h3>
		</div> <!-- end col-full -->
	</div> <!-- end row -->

	<div class="row-main services-content">

		<div class="services-list block-1-2 block-tab-full group">

			<div class="bgrid service-item animate-this">	

				<span class="icon"><i class="icon-paint-brush"></i></span>            

				<div class="service-content">
					<h3 class="h05">Password Reset</h3>
					<div class="more animate-intro">
						<a class="smoothscroll button stroke" href="@Url.Action("ResetPassword", "ActiveDirectory")">
							Go!
						</a>
					</div>				
				</div> 	         	 

			</div> <!-- end bgrid -->

			<div class="bgrid service-item animate-this">	

				<span class="icon"><i class="icon-earth"></i></span>        
				<div class="service-content">	
					<h3 class="h05">User Management</h3>
					<div class="more animate-intro">
						<a class="smoothscroll button stroke" href="#about">
							Login
						</a>
					</div>
				</div>	                          

			</div> <!-- end bgrid -->

			<div class="bgrid service-item animate-this">

				<span class="icon"><i class="icon-lego-block"></i></span>		            

				<div class="service-content">
					<h3 class="h05">Reports</h3>
					<div class="more animate-intro">
						<a class="smoothscroll button stroke" href="#about">
							Login
						</a>
					</div>
				</div> 	            	               

			</div> <!-- end bgrid -->

			<div class="bgrid service-item animate-this">

				<span class="icon"><i class="icon-megaphone"></i></span>	              

				<div class="service-content">
					<h3 class="h05">Health</h3>
					<div class="more animate-intro">
						<a class="smoothscroll button stroke" href="#about">
							Login
						</a>
					</div>
				</div>                

			</div> <!-- end bgrid -->			   

		</div> <!-- end services-list -->
		
	</div> <!-- end services-content -->   			

</section> <!-- end services -->
<section id="about">

	<div class="row-main about-wrap">
		<div class="col-full">

			<div class="about-profile-bg"></div>

			<div class="intro">
				<h3 class="animate-this">About this Tool</h3>
				<p class="lead animate-this"><span>Active Directory Manager</span> the self service tool for your Active Directory.</p>	
			</div>   

		</div> <!-- end col-full  -->
	</div> <!-- end about-wrap  -->

</section> <!-- end about -->